<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background8"
    android:padding="15.0dp"
    android:layout_height="match_parent">
    <TextView
        android:textStyle=""
        android:textColor="@android:color/black"
        android:gravity="center"
        android:text="@string/textView34"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="96.5dp"
        android:id="@+id/textView1" />

    <TableLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout1">

        <TextView
            android:textStyle=""
            android:textColor="@color/blanco"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="53.0dp"
            android:id="@+id/textView2" />

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRow1">

            <ImageView
                android:layout_width="95.0dp"
                android:layout_height="48.5dp"
                android:contentDescription=""
                android:src="@drawable/gasto"
                android:id="@+id/imageView4" />

            <TextView
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView4"
                android:layout_height="wrap_content"
                android:layout_width="71.5dp" />

            <ImageView
                android:layout_width="95.0dp"
                android:layout_height="48.5dp"
                android:contentDescription=""
                android:src="@drawable/ingresos"
                android:id="@+id/imageView" />

        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRow2">

            <Button
                android:text="@string/btnGasto"
                android:id="@+id/btnGasto"
                android:layout_width="91.5dp"
                android:layout_height="49.5dp" />

            <TextView
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView3"
                android:layout_height="wrap_content"
                android:layout_width="71.5dp" />
            <Button
                android:text="@string/btnIngreso"
                android:id="@+id/btnIngreso"
                android:layout_width="99.0dp"
                android:layout_height="49.5dp" />


        </TableRow>

    </TableLayout>
</LinearLayout>
