<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="50dp"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
        android:text="@string/textView3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="246.0dp"
        android:layout_height="32.0dp"
        android:textAlignment="center"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_marginLeft="15.5dp" />
    <TextView
        android:text="@string/textView4"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textNombre" />
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:id="@+id/editNombre"/>

    <TextView
        android:text="@string/textView5"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textApellido" />
    <EditText
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:id="@+id/editApellido" />
    <TextView
        android:text="@string/textView6"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textapodousuario" />
   <EditText
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:id="@+id/editApodousuario" />
    <TextView
        android:text="@string/textView7"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textTelefono" />
    <EditText
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTelefono" />
    <TextView
        android:text="@string/textView8"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textView8" />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editEmail" />
    <TextView
        android:text="@string/textView2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textView2" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="51.0dp"
        android:id="@+id/editPass" />
    <TextView
        android:text="@string/textView9"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textView9" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="52.0dp"
        android:id="@+id/editRepetirPass" />

    <Button
        android:layout_gravity="center"
        android:text="@string/btnCrearCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:id="@+id/btnCrearNueva" />
    <TextView
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:id="@+id/txtMensaje" />

</LinearLayout>
